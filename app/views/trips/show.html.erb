<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="mb-8">
      <div class="flex items-center justify-between">
        <h1 class="text-3xl font-bold text-gray-900">Trip Details</h1>
        <%= link_to "← Back to Recording", recording_path(@trip.recording), 
          class: "text-indigo-600 hover:text-indigo-700 font-medium" %>
      </div>
    </div>

    <!-- Trip Card -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200 overflow-hidden">
      <!-- Image Section -->
      <% if @trip.image.attached? %>
        <div class="aspect-video bg-gray-100">
          <%= image_tag @trip.image.variant(:public), 
            class: "w-full h-full object-contain",
            alt: "Trip image" %>
        </div>
      <% else %>
        <div class="aspect-video bg-gray-100 flex items-center justify-center">
          <div class="text-center">
            <svg class="w-24 h-24 text-gray-400 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <p class="text-gray-500">No image available</p>
          </div>
        </div>
      <% end %>

      <!-- Details Section -->
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Vehicle Information -->
          <div class="space-y-4">
            <h2 class="text-lg font-semibold text-gray-900 border-b pb-2">Vehicle Information</h2>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Vehicle Type</label>
              <p class="text-gray-900 capitalize"><%= @trip.vehicle&.humanize || "Not specified" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Electric</label>
              <p class="text-gray-900">
                <% if @trip.electric %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                    ⚡ Electric
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Non-electric
                  </span>
                <% end %>
              </p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Passenger Count</label>
              <p class="text-gray-900"><%= @trip.passenger_count || "Not specified" %></p>
            </div>
          </div>

          <!-- Rider Information -->
          <div class="space-y-4">
            <h2 class="text-lg font-semibold text-gray-900 border-b pb-2">Rider Information</h2>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Age Category</label>
              <p class="text-gray-900">
                <% if @trip.child %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                    Child
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                    Adult
                  </span>
                <% end %>
              </p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Helmet Usage</label>
              <p class="text-gray-900">
                <% if @trip.wearing_helmet %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    🪖 Wearing helmet
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                    No helmet
                  </span>
                <% end %>
              </p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Clothing Type</label>
              <p class="text-gray-900 capitalize"><%= @trip.clothing || "Not specified" %></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Gender Presentation (by clothing)</label>
              <p class="text-gray-900 capitalize"><%= @trip.gender_of_clothing || "Not specified" %></p>
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="mt-8 pt-6 border-t border-gray-200">
          <div class="flex flex-col sm:flex-row gap-3">
            <%= link_to "Edit Trip", edit_trip_path(@trip), 
              class: "flex-1 text-center bg-indigo-600 text-white py-2 px-4 rounded-md font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-200" %>
            <%= link_to "Back to Recording", recording_path(@trip.recording), 
              class: "flex-1 text-center bg-gray-100 text-gray-700 py-2 px-4 rounded-md font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>