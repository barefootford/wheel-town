<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @recording.title %></h1>
      <p class="text-gray-600">Recording Details</p>
    </div>

    <!-- Recording Card -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-8">
        <div class="space-y-6">
          <!-- Basic Info -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Date</label>
              <p class="text-gray-900"><%= @recording.date %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Start Time</label>
              <p class="text-gray-900"><%= @recording.time_start %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">End Time</label>
              <p class="text-gray-900"><%= @recording.time_end %></p>
            </div>
          </div>

          <!-- Recorder -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Recorded By</label>
            <p class="text-gray-900"><%= @recording.recorder_name %></p>
          </div>

          <!-- Location Section -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Location Details</h3>
            
            <div class="space-y-4">
              <% if @recording.gps_coordinates.present? %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">GPS Coordinates</label>
                  <p class="text-gray-900"><%= @recording.gps_coordinates %></p>
                </div>
              <% end %>

              <% if @recording.address.present? %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                  <p class="text-gray-900"><%= @recording.address %></p>
                </div>
              <% end %>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% if @recording.city.present? %>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                    <p class="text-gray-900"><%= @recording.city %></p>
                  </div>
                <% end %>
                <% if @recording.state.present? %>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
                    <p class="text-gray-900"><%= @recording.state %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
            <%= link_to "Edit Recording", edit_recording_path(@recording), class: "flex-1 text-center bg-indigo-600 text-white py-2 px-4 rounded-md font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-200" %>
            <%= link_to "Back to Home", root_path, class: "flex-1 text-center bg-gray-100 text-gray-700 py-2 px-4 rounded-md font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>