<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @recording.title %></h1>
      <p class="text-gray-600">Recording Details</p>
    </div>

    <!-- Recording Card -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-8">
        <div class="space-y-6">
          <!-- Basic Info -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Date</label>
              <p class="text-gray-900"><%= @recording.date %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Start Time</label>
              <p class="text-gray-900"><%= @recording.time_start %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">End Time</label>
              <p class="text-gray-900"><%= @recording.time_end %></p>
            </div>
          </div>

          <!-- Recorder -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Recorded By</label>
            <p class="text-gray-900"><%= @recording.recorder_name %></p>
          </div>

          <!-- Location Section -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Location Details</h3>

            <div class="space-y-4">
              <% if @recording.gps_coordinates.present? %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">GPS Coordinates</label>
                  <p class="text-gray-900"><%= @recording.gps_coordinates %></p>
                </div>
              <% end %>

              <% if @recording.address.present? %>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-1">Address</label>
                  <p class="text-gray-900"><%= @recording.address %></p>
                </div>
              <% end %>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <% if @recording.city.present? %>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">City</label>
                    <p class="text-gray-900"><%= @recording.city %></p>
                  </div>
                <% end %>
                <% if @recording.state.present? %>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">State</label>
                    <p class="text-gray-900"><%= @recording.state %></p>
                  </div>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
            <%= link_to "Edit Recording", edit_recording_path(@recording), class: "flex-1 text-center bg-indigo-600 text-white py-2 px-4 rounded-md font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-200" %>
            <%= link_to "Back to Home", root_path, class: "flex-1 text-center bg-gray-100 text-gray-700 py-2 px-4 rounded-md font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Trip Statistics Section -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Trip Statistics</h2>

      <!-- Summary Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-8">
        <%= render 'recordings/charts/stats_card',
          title: 'Total Trips',
          value: @trips.count,
          subtitle: nil,
          color: 'blue',
          icon: content_tag(:svg, content_tag(:path, nil,
            'stroke-linecap': 'round',
            'stroke-linejoin': 'round',
            'd': 'M13 10V3L4 14h7v7l9-11h-7z'),
            class: 'w-6 h-6 text-blue-600',
            fill: 'none',
            viewBox: '0 0 24 24',
            stroke: 'currentColor',
            'stroke-width': '2') %>

        <%= render 'recordings/charts/stats_card',
          title: 'Helmet Usage',
          value: "#{@helmet_percentage}%",
          subtitle: "#{@helmet_data[true] || 0} of #{@trips.count} riders",
          color: 'green',
          icon: content_tag(:svg, content_tag(:path, nil,
            'stroke-linecap': 'round',
            'stroke-linejoin': 'round',
            'd': 'M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z'),
            class: 'w-6 h-6 text-green-600',
            fill: 'none',
            viewBox: '0 0 24 24',
            stroke: 'currentColor',
            'stroke-width': '2') %>

        <%= render 'recordings/charts/stats_card',
          title: 'Electric Vehicles',
          value: "#{@electric_percentage}%",
          subtitle: "#{@electric_data[true] || 0} electric rides",
          color: 'yellow',
          icon: content_tag(:svg, content_tag(:path, nil,
            'stroke-linecap': 'round',
            'stroke-linejoin': 'round',
            'd': 'M13 10V3L4 14h7v7l9-11h-7z'),
            class: 'w-6 h-6 text-yellow-600',
            fill: 'none',
            viewBox: '0 0 24 24',
            stroke: 'currentColor',
            'stroke-width': '2') %>

        <%= render 'recordings/charts/stats_card',
          title: 'Child Riders',
          value: "#{@child_percentage}%",
          subtitle: "#{@child_data[true] || 0} children",
          color: 'purple',
          icon: content_tag(:svg, content_tag(:path, nil,
            'stroke-linecap': 'round',
            'stroke-linejoin': 'round',
            'd': 'M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z'),
            class: 'w-6 h-6 text-purple-600',
            fill: 'none',
            viewBox: '0 0 24 24',
            stroke: 'currentColor',
            'stroke-width': '2') %>
      </div>

      <!-- Charts Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
        <!-- Helmet Usage Donut Chart -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Helmet Usage</h3>
          <%= render 'recordings/charts/donut_chart',
            percentage: @helmet_percentage,
            label: 'wearing helmets',
            primary_color: '#10b981',
            secondary_color: '#e5e7eb' %>
          <div class="mt-4 flex justify-center gap-6 text-sm">
            <div class="flex items-center gap-2">
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <span>With Helmet (<%= @helmet_data[true] || 0 %>)</span>
            </div>
            <div class="flex items-center gap-2">
              <div class="w-3 h-3 bg-gray-200 rounded-full"></div>
              <span>Without Helmet (<%= @helmet_data[false] || 0 %>)</span>
            </div>
          </div>
        </div>

        <!-- Vehicle Types Bar Chart -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Vehicle Types</h3>
          <% vehicle_colors = {
            'bicycle' => '#3b82f6',
            'e-bike' => '#10b981',
            'scooter' => '#f59e0b',
            'e-scooter' => '#ef4444',
            'skateboard' => '#8b5cf6',
            'onewheel' => '#ec4899',
            'other' => '#6b7280'
          } %>
          <%= render 'recordings/charts/bar_chart',
            data: @vehicle_data,
            colors: vehicle_colors %>
        </div>

        <!-- Gender Distribution Bar Chart -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Gender Presentation (by clothing)</h3>
          <% gender_colors = {
            'masculine' => '#3b82f6',
            'feminine' => '#ec4899',
            'neutral' => '#10b981',
            'unknown' => '#6b7280'
          } %>
          <%= render 'recordings/charts/bar_chart',
            data: @gender_data,
            colors: gender_colors %>
        </div>

        <!-- Age Groups -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Age Groups</h3>
          <div class="space-y-4">
            <div class="flex justify-between items-center p-4 bg-purple-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="p-2 bg-purple-100 rounded-full">
                  <svg class="w-6 h-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Children</p>
                  <p class="text-sm text-gray-600"><%= @child_data[true] || 0 %> riders</p>
                </div>
              </div>
              <span class="text-2xl font-bold text-purple-600"><%= @child_percentage %>%</span>
            </div>

            <div class="flex justify-between items-center p-4 bg-blue-50 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="p-2 bg-blue-100 rounded-full">
                  <svg class="w-6 h-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                  </svg>
                </div>
                <div>
                  <p class="font-medium text-gray-900">Adults</p>
                  <p class="text-sm text-gray-600"><%= @child_data[false] || 0 %> riders</p>
                </div>
              </div>
              <span class="text-2xl font-bold text-blue-600"><%= 100 - @child_percentage %>%</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Trips Index -->
      <div class="mt-12">
        <h2 class="text-2xl font-bold text-gray-900 mb-6">Individual Trips</h2>
        <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-4">
          <% @trips.each do |trip| %>
            <% if trip.child %>
              <!-- Child trip - no link, generic icon -->
              <div class="relative group">
                <div class="aspect-square bg-purple-100 rounded-lg flex items-center justify-center">
                  <svg class="w-16 h-16 text-purple-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-10 transition-opacity rounded-lg"></div>
                <div class="mt-2 text-xs text-center">
                  <p class="font-medium text-gray-700">Child Rider</p>
                  <p class="text-gray-500"><%= trip.vehicle&.humanize || 'Unknown' %></p>
                </div>
              </div>
            <% else %>
              <!-- Adult trip - with link to trip show page -->
              <%= link_to trip_path(trip),
                class: 'block' do %>
                <div class="relative group">
                  <div class="aspect-square bg-gray-100 rounded-lg overflow-hidden">
                    <% if trip.image.attached? %>
                      <%= image_tag trip.image.variant(:public),
                        class: 'w-full h-full object-cover',
                        loading: 'lazy'
                      %>
                    <% else %>
                      <div class="w-full h-full flex items-center justify-center bg-gray-200">
                        <svg class="w-12 h-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    <% end %>
                  </div>
                </div>
                <div class="mt-2 text-xs">
                  <p class="font-medium text-gray-700"><%= trip.vehicle&.humanize || 'Unknown' %></p>
                  <div class="flex items-center gap-2 text-gray-500">
                    <% if trip.wearing_helmet %>
                      <span class="text-green-600">🪖</span>
                    <% end %>
                    <% if trip.electric %>
                      <span>⚡</span>
                    <% end %>
                    <span><%= trip.gender_of_clothing&.capitalize || 'Unknown' %></span>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
