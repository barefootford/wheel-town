<div class="min-h-screen bg-gray-50 py-12">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Recording</h1>
      <p class="text-gray-600">Update your wheel adventure details</p>
    </div>

    <!-- Form Card -->
    <div class="bg-white shadow-sm rounded-lg border border-gray-200">
      <div class="px-6 py-8">
        <%= form_with(model: @recording, local: true, class: "space-y-6") do |form| %>
          <!-- Error Messages -->
          <% if @recording.errors.any? %>
            <div class="bg-red-50 border border-red-200 rounded-md p-4">
              <div class="flex">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                  </svg>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    There were <%= pluralize(@recording.errors.count, "error") %> with your submission:
                  </h3>
                  <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
                    <% @recording.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Recording Title -->
          <div>
            <%= form.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :title, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Enter recording title" %>
          </div>

          <!-- Date and Time Row -->
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <%= form.label :date, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.date_field :date, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
            </div>
            <div>
              <%= form.label :time_start, "Start Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.time_field :time_start, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
            </div>
            <div>
              <%= form.label :time_end, "End Time", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.time_field :time_end, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
            </div>
          </div>

          <!-- Recorder Name -->
          <div>
            <%= form.label :recorder_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= form.text_field :recorder_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Who recorded this?" %>
          </div>

          <!-- Location Section -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Location Details</h3>
            
            <!-- GPS Coordinates -->
            <div class="mb-4">
              <%= form.label :gps_coordinates, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :gps_coordinates, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "e.g., 40.7128, -74.0060" %>
            </div>

            <!-- Address -->
            <div class="mb-4">
              <%= form.label :address, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.text_field :address, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Street address" %>
            </div>

            <!-- City and State Row -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <%= form.label :city, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :city, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "City" %>
              </div>
              <div>
                <%= form.label :state, class: "block text-sm font-medium text-gray-700 mb-2" %>
                <%= form.text_field :state, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "State" %>
              </div>
            </div>
          </div>

          <!-- Image Upload Section -->
          <div class="border-t border-gray-200 pt-6">
            <h3 class="text-lg font-medium text-gray-900 mb-4">Upload Images</h3>
            <p class="text-sm text-gray-600 mb-4">Upload up to 10 images. Each image will create a new trip that you can edit later.</p>
            
            <div>
              <%= form.label :images, "Select Images", class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= form.file_field :images, 
                    multiple: true, 
                    accept: "image/*",
                    class: "block w-full text-sm text-gray-500 
                           file:mr-4 file:py-2 file:px-4 
                           file:rounded-md file:border-0 
                           file:text-sm file:font-medium 
                           file:bg-indigo-50 file:text-indigo-700 
                           hover:file:bg-indigo-100 
                           border border-gray-300 rounded-md 
                           focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500",
                    onchange: "validateImageCount(this)" %>
              <p class="mt-2 text-xs text-gray-500">PNG, JPG, GIF up to 10MB each. Maximum 10 files.</p>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
            <%= form.submit "Update Recording", class: "flex-1 bg-indigo-600 text-white py-2 px-4 rounded-md font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 transition duration-200" %>
            <%= link_to "Cancel", @recording, class: "flex-1 text-center bg-gray-100 text-gray-700 py-2 px-4 rounded-md font-medium hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition duration-200" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Trips Table -->
    <% if @recording.trips.any? %>
      <div class="bg-white shadow-sm rounded-lg border border-gray-200 mt-8">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-xl font-semibold text-gray-900">Trips (<%= @recording.trips.count %>)</h2>
          <p class="text-sm text-gray-600 mt-1">Images uploaded for this recording</p>
        </div>
        
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Image</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Vehicle</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Clothing</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Gender</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Passengers</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Helmet</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Created</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @recording.trips.includes(image_attachment: :blob).each do |trip| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if trip.image.attached? %>
                      <div class="h-16 w-16 rounded-lg overflow-hidden bg-gray-100 border border-gray-200">
                        <%= image_tag trip.image, class: "h-full w-full object-cover" %>
                      </div>
                    <% else %>
                      <div class="h-16 w-16 rounded-lg bg-gray-100 border border-gray-200 flex items-center justify-center">
                        <svg class="h-8 w-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                      </div>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= trip.vehicle.presence || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= trip.clothing.presence || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= trip.gender_of_clothing.presence || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                    <%= trip.passenger_count.presence || "-" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if trip.wearing_helmet.nil? %>
                      <span class="text-sm text-gray-500">-</span>
                    <% elsif trip.wearing_helmet %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        Yes
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                        No
                      </span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                    <%= time_ago_in_words(trip.created_at) %> ago
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex items-center space-x-3">
                      <%= link_to "Edit", edit_trip_path(trip), class: "text-indigo-600 hover:text-indigo-900" %>
                      <%= link_to "Delete", trip_path(trip), 
                            method: :delete,
                            data: { 
                              confirm: "Are you sure you want to delete this trip?",
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure you want to delete this trip?"
                            },
                            class: "text-red-600 hover:text-red-900" %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function validateImageCount(input) {
    const maxFiles = 10;
    if (input.files.length > maxFiles) {
      alert(`You can only select up to ${maxFiles} images at once.`);
      input.value = '';
      return false;
    }
    
    // Check file sizes (10MB limit per file)
    const maxSize = 10 * 1024 * 1024; // 10MB in bytes
    for (let i = 0; i < input.files.length; i++) {
      if (input.files[i].size > maxSize) {
        alert(`File "${input.files[i].name}" is too large. Maximum size is 10MB per file.`);
        input.value = '';
        return false;
      }
    }
    
    return true;
  }
</script>
