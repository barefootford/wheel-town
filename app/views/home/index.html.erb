<div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100">
  <div class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
      <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-indigo-600 mb-6">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>

      <h1 class="text-6xl font-bold text-gray-900 mb-4">
        Welcome to
        <span class="text-indigo-600">WheelTown</span>
      </h1>

      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        A new gold standard for collecting bike lane usage
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <%= link_to "Create Recording", new_recording_path, class: "px-8 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow-lg hover:bg-indigo-700 transition duration-200 text-center" %>
      </div>
    </div>

    <% if @recordings.any? %>
      <div class="mb-8">
        <h2 class="text-3xl font-bold text-gray-900 text-center mb-8">Recent Recordings</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @recordings.each do |recording| %>
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <% if recording.cover_image.attached? %>
                <%= link_to recording_path(recording), class: "block" do %>
                  <%= image_tag recording.cover_image.variant(:thumbnail), class: "w-full h-48 object-cover" %>
                <% end %>
              <% else %>
                <%= link_to recording_path(recording), class: "block" do %>
                  <div class="w-full h-48 bg-gradient-to-br from-indigo-400 to-blue-500 flex items-center justify-center">
                    <svg class="w-16 h-16 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                <% end %>
              <% end %>

              <div class="p-6">
                <h3 class="text-xl font-semibold text-gray-900 mb-2">
                  <%= link_to recording.title, recording_path(recording), class: "hover:text-indigo-600 transition-colors" %>
                </h3>

                <div class="space-y-2 text-sm text-gray-600">
                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <%= recording.date.strftime("%B %d, %Y") %>
                  </div>

                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <%= recording.time_start.strftime("%l:%M %p") %>
                    <% if recording.time_end %>
                      - <%= recording.time_end.strftime("%l:%M %p") %>
                    <% end %>
                  </div>

                  <% if recording.city.present? %>
                    <div class="flex items-center">
                      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                      </svg>
                      <%= recording.city %><% if recording.state %>, <%= recording.state %><% end %>
                    </div>
                  <% end %>

                  <div class="flex items-center">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    <%= recording.recorder_name %>
                  </div>

                  <div class="flex items-center pt-2">
                    <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                    </svg>
                    <span class="font-medium"><%= recording.trips.count %>&nbsp;trips recorded</span>
                  </div>
                </div>

                <div class="mt-4 flex gap-4">
                  <%= link_to "View Details â†’", recording_path(recording), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
                  <%= link_to "Edit Recording", edit_recording_path(recording), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="text-center py-12">
        <p class="text-gray-600 mb-4">No recordings yet. Create your first recording to get started!</p>
      </div>
    <% end %>
  </div>
</div>
